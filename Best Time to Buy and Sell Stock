class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int buy = prices[0];
        int  profit = 0;
        
        for(int i = 0;i<prices.size();i++){
            //check whether the prices is higher or lesser from day 1;
            if(prices[i]<buy){
                //if so then move the buy = prices[i];
                buy = prices[i];
            }
            //to update the max profit
            else if(prices[i]-buy>profit){
                profit = prices[i] -buy;
            }
        }
        return profit;




    }
};
